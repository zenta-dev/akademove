  "version": "0.2.0",
  "configurations": [
    {
      "name": "mobile (development mode)",
      "cwd": "apps/mobile",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--flavor",
        "development",
        "--target",
        "lib/main.dart",
        // "--verbose"
      ]
    },
    {
      "name": "mobile (staging mode)",
      "cwd": "apps/mobile",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["--flavor", "staging", "--target", "lib/main.dart"],
      "flutterMode": "profile"
    },
    {
      "name": "mobile (release mode)",
      "cwd": "apps/mobile",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["--flavor", "production", "--target", "lib/main.dart"],
      "flutterMode": "release"
    }, 
  ]
}