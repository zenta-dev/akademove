{
	"name": "akademove",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"clean": "turbo clean && git clean -xdf .turbo node_modules",
		"prepare": "husky",
		"dev": "concurrently --names 'alchemy,i18n' --prefix-colors 'cyan,magenta' 'bun run dev:alchemy' 'bun run dev:i18n'",
		"dev:i18n": "turbo -F @repo/i18n dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:alchemy": "alchemy dev",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F server db:push",
		"db:studio": "turbo -F server db:studio",
		"db:generate": "turbo -F server db:generate",
		"db:migrate": "turbo -F server db:migrate",
		"deploy": "alchemy deploy --stage production --env-file .env.prod",
		"destroy": "alchemy destroy --stage production --env-file .env.prod"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@openapitools/openapi-generator-cli": "^2.23.4",
		"alchemy": "^0.70.2",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"turbo": "^2.5.8"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.2.21"
}
