{
	"name": "akademove",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"clean": "turbo clean && git clean -xdf .turbo node_modules",
		"prepare": "husky",
		"dev": "concurrently --names 'alchemy,i18n' --prefix-colors 'cyan,magenta' 'bun run dev:alchemy' 'bun run dev:i18n'",
		"dev:i18n": "turbo -F @repo/i18n dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:alchemy": "ALCHEMY_TELEMETRY_DISABLED=1 alchemy dev",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F server db:push",
		"db:studio": "turbo -F server db:studio",
		"db:generate": "turbo -F server db:generate",
		"db:migrate": "turbo -F server db:migrate",
		"db:seed": "bun run apps/server/scripts/seed.ts",
		"db:reset": "bun run apps/server/scripts/reset.ts",
		"seed:quick-messages": "bun run apps/server/scripts/seed-quick-messages.ts",
		"deploy": "ALCHEMY_TELEMETRY_DISABLED=1 alchemy deploy --stage production --env-file .env.prod",
		"destroy": "ALCHEMY_TELEMETRY_DISABLED=1 alchemy destroy --stage production --env-file .env.prod"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@openapitools/openapi-generator-cli": "^2.25.2",
		"alchemy": "^0.80.1",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.6.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		],
		"*.{dart}": [
			"melos fix && melos format"
		]
	},
	"packageManager": "bun@1.2.21"
}
