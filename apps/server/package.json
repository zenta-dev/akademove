{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"clean": "git clean -xdf .turbo node_modules",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"db:push": "bun with-env drizzle-kit push",
		"db:studio": "bun with-env drizzle-kit studio",
		"db:generate": "bun with-env drizzle-kit generate",
		"db:migrate": "bun with-env drizzle-kit migrate",
		"db:seed": "bun with-env bun scripts/seed.ts",
		"db:reset": "bun with-env bun scripts/reset.ts",
		"db:drop": "bun with-env bun scripts/drop.ts",
		"dev": "alchemy dev",
		"deploy": "alchemy deploy",
		"destroy": "alchemy destroy",
		"with-env": "dotenv -e ../../.env --"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.936.0",
		"@aws-sdk/s3-request-presigner": "^3.936.0",
		"@erhahahaa/midtrans-client-typescript": "^1.0.5",
		"@msgpack/msgpack": "^3.1.2",
		"@orpc/contract": "^1.11.3",
		"@orpc/experimental-durable-iterator": "^1.11.3",
		"@orpc/openapi": "^1.11.3",
		"@orpc/server": "^1.11.3",
		"@orpc/zod": "^1.11.3",
		"@repo/schema": "workspace:*",
		"@repo/shared": "workspace:*",
		"@xmldom/xmldom": "^0.8.11",
		"decimal.js": "^10.6.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"firebase-admin": "^13.6.0",
		"hono": "^4.10.6",
		"jose": "6.1.2",
		"postgres": "^3.4.7",
		"resend": "^6.5.2",
		"uuid": "^13.0.0",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251120.0",
		"@faker-js/faker": "^10.1.0",
		"@types/node": "^24.10.1",
		"alchemy": "^0.77.5",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^11.0.0",
		"drizzle-kit": "^0.31.7",
		"tsdown": "^0.16.6",
		"typescript": "^5.9.3",
		"wrangler": "^4.49.1"
	}
}
