{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"clean": "git clean -xdf .turbo node_modules",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"db:push": "bun with-env drizzle-kit push",
		"db:studio": "bun with-env drizzle-kit studio",
		"db:generate": "bun with-env drizzle-kit generate",
		"db:migrate": "bun with-env drizzle-kit migrate",
		"dev": "alchemy dev",
		"deploy": "alchemy deploy",
		"destroy": "alchemy destroy",
		"with-env": "dotenv -e ../../.env --"
	},
	"dependencies": {
		"@hono/standard-validator": "^0.1.5",
		"@repo/schema": "workspace:*",
		"@scalar/hono-api-reference": "^0.9.18",
		"better-auth": "^1.3.9",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.2",
		"hono": "^4.9.7",
		"hono-openapi": "^1.0.7",
		"jose": "6.1.0",
		"postgres": "^3.4.7",
		"uuid": "^13.0.0",
		"zod": "^4.1.8",
		"zod-to-json-schema": "^3.24.6"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250913.0",
		"@types/node": "^24.4.0",
		"alchemy": "^0.66.0",
		"dotenv": "^17.2.1",
		"dotenv-cli": "^10.0.0",
		"drizzle-kit": "^0.31.2",
		"tsdown": "^0.15.1",
		"typescript": "^5.8.2",
		"wrangler": "^4.36.0"
	}
}
